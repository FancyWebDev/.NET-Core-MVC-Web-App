@model WebApp.ViewModel.UserDetailViewModel

@{
  ViewBag.Title = Model.UserName ?? "User Profile";
  Layout = "_Layout";
}

<div class="container">
  <h1 class="my-4">
    Page Heading
    <small>Secondary Text</small>
  </h1>

  <div class="row">
    <div class="col-md-8">
      <img class="img-fluid" src="@Model.ProfileImageUrl" alt="">
    </div>

    <div class="col-md-4">
      <h3 class="my-3">@Model.UserName</h3>
      <h3 class="my-3"></h3>
      <ul>
        <li>Pace: @Model.Pace</li>
        <li>Mileage: @Model.Mileage</li>
      </ul>
      <h3 class="my-3">Location</h3>
      <ul>
        <li>@Model.Address?.State</li>
        <li>@Model.Address?.City</li>
        <li>@Model.Address?.Street</li>
      </ul>
    </div>
  </div>

  <h3 class="my-4">Related Projects</h3>

  <div class="row">
    <div class="col-md-3 col-sm-6 mb-4">
      <a href="#">
        <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
      </a>
    </div>

    <div class="col-md-3 col-sm-6 mb-4">
      <a href="#">
        <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
      </a>
    </div>

    <div class="col-md-3 col-sm-6 mb-4">
      <a href="#">
        <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
      </a>
    </div>

    <div class="col-md-3 col-sm-6 mb-4">
      <a href="#">
        <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
      </a>
    </div>
  </div>
</div>