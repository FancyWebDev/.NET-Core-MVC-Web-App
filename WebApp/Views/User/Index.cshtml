@using WebApp.ViewModel
@model IEnumerable<AppUserViewModel>

@{
  ViewBag.Title = "Runners";
  Layout = "_Layout";
}

<section class="flush-with-above">
  <div class="container">
    <div class="row">
      <div class="col">
        <table class="table table-hover align-items-center table-borderless">
          <tbody>
          @foreach (var user in Model)
          {
            <tr class="bg-white">
              <th scope="row">
                <div class="media align-items-center">
                  <img alt="Image profile avatar" src="@user.ProfileImageUrl" width="300" height="225" class="avatar">
                  <div class="media-body">
                    <span class="h6 mb-0">@user.UserName</span>
                  </div>
                </div>
              </th>
              <td>
                <a class="btn btn-outline-primary" asp-controller="User" asp-action="Detail" asp-route-id="@user.Id">
                    View Profile
                </a>
              </td>
              <td>@user.Mileage mile at @user.Pace mph</td>
            </tr>
            <tr class="table-divider">
              <th></th>
              <td></td>
            </tr>
          }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>