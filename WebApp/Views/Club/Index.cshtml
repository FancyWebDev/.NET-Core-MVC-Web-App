@{
  ViewBag.Title = "Clubs";
  Layout = "_Layout";
}

@model IEnumerable<Club>

<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">Clubs page</h1>
      <p class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
      <p>
        <a href="#" class="btn btn-primary my-2">Main call to action</a>
        <a href="#" class="btn btn-secondary my-2">Secondary action</a>
      </p>
    </div>
  </div>
</section>

<div class="album py-5 bg-light">
  <div class="container">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      @foreach (var club in Model)
      {
        <div class="col">
          <div class="card shadow-sm">
            <img class="card-img-top" src="@club.Image" width="100%" height="225" alt="">
            <div class="card-body">
              <p class="card-title">@club.Title</p>
              <p class="card-text">@club.Description</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a type="button" asp-controller="Club" asp-action="Detail" asp-route-id="@club.Id" class="btn btn-sm btn-outline-secondary">View</a>
                  <a type="button" asp-controller="Club" asp-action="Edit" asp-route-id="@club.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                  <a type="button" asp-controller="Club" asp-action="Delete" asp-route-id="@club.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                </div>
                <small class="text-muted">@club.ClubCategory</small>
              </div>
            </div>
          </div>
        </div>
      }
    </div>

  </div>
</div>